<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="find_a_stop"
        android:entries="@array/start_page_list"
        android:entryValues="@array/start_page_list_values"
        android:key="start_page"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Open on start" />

    <ListPreference
        android:defaultValue="1"
        android:entries="@array/server_list"
        android:entryValues="@array/server_list_values"
        android:key="server_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Server used" />

    <ListPreference
        android:defaultValue="300"
        android:entries="@array/interval_list"
        android:entryValues="@array/interval_list_values"
        android:key="interval_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Time interval" />

</PreferenceScreen>
